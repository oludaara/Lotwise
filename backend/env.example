# =============================================================================
# LOTWISE ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# =============================================================================
# WALLET CONNECTION CONFIGURATION
# =============================================================================
# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# =============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# =============================================================================
# Ethereum Sepolia (Testnet)
NEXT_PUBLIC_SEPOLIA_CHAIN_ID=11155111
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
NEXT_PUBLIC_SEPOLIA_EXPLORER=https://sepolia.etherscan.io

# Avalanche Fuji (Testnet)
NEXT_PUBLIC_FUJI_CHAIN_ID=43113
NEXT_PUBLIC_FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
NEXT_PUBLIC_FUJI_EXPLORER=https://testnet.snowtrace.io

# Avalanche Mainnet
NEXT_PUBLIC_AVALANCHE_CHAIN_ID=43114
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
NEXT_PUBLIC_AVALANCHE_EXPLORER=https://snowtrace.io

# Polygon Mumbai (Testnet)
NEXT_PUBLIC_MUMBAI_CHAIN_ID=80001
NEXT_PUBLIC_MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
NEXT_PUBLIC_MUMBAI_EXPLORER=https://mumbai.polygonscan.com

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================
NEXT_PUBLIC_LOTWISE_CONTRACT_SEPOLIA=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_LOTWISE_CONTRACT_FUJI=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_LOTWISE_CONTRACT_AVALANCHE=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_LOTWISE_CONTRACT_MUMBAI=0x0000000000000000000000000000000000000000

# =============================================================================
# CHAINLINK CONFIGURATION
# =============================================================================
NEXT_PUBLIC_CHAINLINK_FUNCTIONS_DON_ID=your_don_id_here
NEXT_PUBLIC_CHAINLINK_FUNCTIONS_SECRETS_URI=your_secrets_uri_here

# =============================================================================
# AAVE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_AAVE_POOL_ADDRESS_PROVIDER=0x2f39d218133AFaB8F2B819B1066c7E434Ad94E9e
NEXT_PUBLIC_AAVE_WETH_GATEWAY=0x387d311e47e80b498169e6fb51d3193167d89Fcc

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Infura (for Ethereum/Polygon)
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret

# Alchemy (alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_api_key

# Etherscan API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
SNOWTRACE_API_KEY=your_snowtrace_api_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_TEST_MODE=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug 